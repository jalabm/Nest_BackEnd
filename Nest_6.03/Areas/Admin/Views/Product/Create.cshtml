@model Product


<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Enter name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SellPrice">Sell  Price  </label>
        <input class="form-control" asp-for="SellPrice" placeholder="Enter Sell Price">
        <span asp-validation-for="SellPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountPrice">Discount Price</label>
        <input class="form-control" asp-for="DiscountPrice" placeholder="Enter Discount Price">
        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Files"></label>
        <input class="form-control" asp-for="Files" placeholder="Enter icon">
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Files"></label>
      <select  asp-for="Files" asp-items="@(new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name)))" class="form-control">
          <option selected >Select Category</option>
      </select>
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>