@model List<Category>
@foreach (var category in Model)
{
    <tr class="odd">
        <td class="sorting_1">@category.Name</td>
        <td style="display:flex; justify-content:center; align-items:center"><img width="40" src="~/assets/imgs/categoryIcons/@category.Icon" /></td>
        <td><a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>
        <td><a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
    </tr>
}
